<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFDBDB"
    tools:context=".UI.LoginScreeen.LoginScreen">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints,Orientation">
        <TextView
            android:text="YUMMY FOOD"
            android:textSize="50dp"
            android:background="#47E44E"
            android:fontFamily="monospace"
            android:paddingLeft="20dp"
            android:textColor="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_action_user"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:hint="Nhập tên đăng nhập"></EditText>
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_action_pass"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu"></EditText>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:text="Đăng nhập"
                android:background="#BC8585"
                android:layout_height="50dp"></Button>

        </LinearLayout>
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:text="Bạn muốn đăng ký ?"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>
</RelativeLayout>